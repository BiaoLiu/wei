/* pages/people/people.wxss */
.container{
  padding: 0;
  margin: 0;
}
.blank{
  width: 100%;
  height: 10rpx;
  background:rgb(204, 204, 204);
}
.logo{
  width: 100%;
  height: 144rpx;
}
.logo navigator image{
  width: 40rpx;
  height: 40rpx;
}
.logo navigator text{
  font-size: 28rpx;
}
.logo navigator{
  float: right;
  display: flex;
  margin-right: 20rpx;
}
.nickname{
  font-size: 30rpx;
  display: flex;
  padding-left: 30rpx;
  float: left;
}
.userscore{
  font-size: 30rpx;
  display: flex;
  padding-left: 30rpx;
}
.userinfo{
  width: 100rpx;
  height:100rpx;
  border-radius:50%;
  display: flex;
  overflow:hidden;
  float: left;
}

.navigator{
  height: 100rpx;
  padding: 20rpx 0;
  width: 100%;
}
.navigator navigator{
  float: left;
  width: 50%;

}
.navigator navigator image{
  width: 40rpx;
  height: 40rpx;
}
.navigator navigator view{
  text-align: center;
  font-size: 28rpx;
}
.list-wrapper{
  float: left;
  width: 100%;
  height: 100%;
  margin-top: -20rpx;
}
.list-group{
  width: 100%;
  float: left;
  margin-top: 20rpx;
  box-shadow:0rpx 0rpx 8rpx 0rpx rgba(223,223,223,0.34);
  background:rgba(255,255,255,1);
}
.list-group .menu{
  width: 90%;
  font-size: 32rpx;
  color: #4F4F4F;
  height: 80rpx;
  padding-left: 20rpx;
  line-height: 80rpx;
  position: relative;
  display: inline-block;
}
.arrow{
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid rgb(209, 208, 208);
  border-right: 4rpx solid rgb(209, 208, 208);
  transform: rotate(45deg);
  position: absolute;
  right: 0rpx;
  top: 24rpx;
}