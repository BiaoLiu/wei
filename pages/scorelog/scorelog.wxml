<!--pages/scorelog/scorelog.wxml-->
<view class='container'>
  <view class='lists'  wx:for="{{scorelog_list}}" wx:key="key"  wx:for-item="scorelog">
    <view wx:if="{{scorelog.action==4}}">
      <text>分享</text>
    </view>
    <view wx:if="{{scorelog.action==3}}">
      <text>抽奖</text>
    </view>
    <view wx:if="{{scorelog.action==2}}">
      <text>签到</text>
    </view>
    <view wx:if="{{scorelog.type==2}}">
      <text>积分：-{{scorelog.score}}</text>
      <text>{{scorelog.created_at}}</text>
    </view>
    <view wx:if="{{scorelog.type==1}}">
      <text>积分：+{{scorelog.score}}</text>
      <text>{{scorelog.created_at}}</text>
    </view>
  </view>
</view>
