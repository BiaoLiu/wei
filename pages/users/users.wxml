<!--pages/users/users.wxml-->

<view class='container'>
  <view class='lists'  wx:for="{{friend_list}}" wx:key="key"  wx:for-item="friend">
    <view>
      <image src='{{friend.avatar}}'></image>
      <text>{{friend.user_nickname}}</text>
      <text wx:if='{{friend.prize_real_count>0}}' bindtap='zhongjiang' data-user_id='{{friend.id}}' style='color:red'>中奖：{{friend.prize_real_count}}</text>
      <text wx:if='{{friend.prize_real_count==0}}' bindtap='zhongjiang' data-user_id='{{friend.id}}'>中奖：{{friend.prize_real_count}}</text>
      <text wx:if='{{friend.post_count>0}}' bindtap='shangchuan' data-user_id='{{friend.id}}' style='color:red'>上传：{{friend.post_count}}</text>
      <text wx:if='{{friend.post_count==0}}' bindtap='shangchuan' data-user_id='{{friend.id}}'>上传：{{friend.post_count}}</text>
    </view>
    <view>
      <text>积分：{{friend.score}}</text>
    </view>
  </view>
</view>

